<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Type Here"
        android:textSize="95dp"
        />
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_marginLeft="2dp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>
</TableLayout>